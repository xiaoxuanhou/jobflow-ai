%% Complete Resume LaTeX Template for jobflow-ai
%% Standalone document - no external preamble needed
%% Jinja2 delimiters: blocks use angle-percent, variables use double-angles

\documentclass[10pt, letterpaper]{article}

% Packages
\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage[margin=0.5in]{geometry}
\usepackage{titlesec}
\usepackage{enumitem}
\usepackage{hyperref}
\usepackage{xcolor}
\usepackage{fontawesome5}
\usepackage{parskip}
\usepackage{array}

% Remove page numbers
\pagenumbering{gobble}

% Colors
\definecolor{linkblue}{RGB}{0, 79, 144}

% Hyperref setup
\hypersetup{
    colorlinks=true,
    linkcolor=linkblue,
    urlcolor=linkblue,
    pdfborder={0 0 0}
}

% Section formatting
\titleformat{\section}
    {\large\bfseries\uppercase}
    {}
    {0em}
    {}
    [\titlerule]

\titlespacing*{\section}{0pt}{8pt}{4pt}

% Custom commands
\newcommand{\AND}{\kern 3pt\textbar\kern 3pt}

\newcommand{\hrefWithoutArrow}[2]{\href{#1}{#2}}

% Header environment
\newenvironment{header}{
    \begin{center}
}{
    \end{center}
    \vspace{-8pt}
}

% One column entry (for summary)
\newenvironment{onecolentry}{
    \begin{center}
}{
    \end{center}
}

% Two column entry (date on right)
\newenvironment{twocolentry}[1]{
    \noindent
    \begin{tabular*}{\textwidth}{@{}l@{\extracolsep{\fill}}r@{}}
}{
    \end{tabular*}
}

\newcommand{\twocolentrytext}[2]{
    #1 & #2 \\
}

% Highlights (bullet points)
\newenvironment{highlights}{
    \vspace{-8pt}
    \begin{itemize}[leftmargin=12pt, itemsep=0pt, parsep=2pt, topsep=2pt]
}{
    \end{itemize}
}

% ============================================================================
% DOCUMENT START
% ============================================================================

\begin{document}

% ----------------------------------------------------------------------------
% HEADER
% ----------------------------------------------------------------------------
\begin{center}
    {\fontsize{24pt}{24pt}\selectfont\textbf{<< contact.name >>}}

    \vspace{4pt}

    \small
    \href{mailto:<< contact.email >>}{<< contact.email >>}
    \AND
    << contact.phone >>
    \AND
    \href{<< contact.linkedin >>}{LinkedIn}
    \AND
    \href{<< contact.github >>}{GitHub}
    \AND
    U.S. Permanent Resident
\end{center}

\vspace{4pt}

% ----------------------------------------------------------------------------
% SUMMARY
% ----------------------------------------------------------------------------
\begin{center}
\textit{<< summary >>}
\end{center}

\vspace{4pt}

% ----------------------------------------------------------------------------
% PROFESSIONAL EXPERIENCE
% ----------------------------------------------------------------------------
\section{Professional Experience}

<% for exp in experiences %>
\noindent
\textbf{<< exp.role >>}, << exp.company >> \hfill << exp.start_date >><% if exp.end_date and exp.end_date != exp.start_date %> -- << exp.end_date >><% endif %>\\
\textit{<< exp.location >>}
\begin{highlights}
<% for bullet in exp.bullets %>
    \item << bullet >>
<% endfor %>
\end{highlights}

<% if not loop.last %>
\vspace{4pt}
<% endif %>

<% endfor %>

% ----------------------------------------------------------------------------
% EDUCATION
% ----------------------------------------------------------------------------
\section{Education}

<% for edu in education %>
\noindent
\textbf{<< edu.institution >>} \hfill << edu.location >>\\
\textit{<< edu.degree >>} \hfill << edu.graduation >>
<% if edu.advisors %>
\\Advisors: << edu.advisors | join(", ") >>
<% endif %>

<% if not loop.last %>
\vspace{4pt}
<% endif %>

<% endfor %>

% ----------------------------------------------------------------------------
% SELECTED PUBLICATIONS
% ----------------------------------------------------------------------------
\section{Selected Publications}

\begin{itemize}[leftmargin=*, itemsep=2pt, topsep=2pt]
<% for pub in publications %>
    \item <% if pub.first_author %>\textbf{First-author}<% endif %> (<< pub.status >><% if pub.venue %>, \textit{<< pub.venue >>}<% endif %>): << pub.short_title >><% if pub.url %> [\href{<< pub.url >>}{\textcolor{blue}{<< pub.url_label >>}}]<% endif %>
<% endfor %>
\end{itemize}

% ----------------------------------------------------------------------------
% TECHNICAL SKILLS
% ----------------------------------------------------------------------------
\section{Technical Skills}

<% for category in skills %>
\textbf{<< category.name >>:} << category.skill_list | join(", ") >>

<% if not loop.last %>
\vspace{2pt}
<% endif %>

<% endfor %>

\end{document}
